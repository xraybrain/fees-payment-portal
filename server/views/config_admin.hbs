<div class="container p-3">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-5 mx-auto">
      <div class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <div class="d-flex align-items-center text-center">
          <i class="fas fa-exclamation-triangle fa-2x text-danger mr-2"></i>
          <span>
            No administrator account exists, you can create a new one using the form below.
          </span>
        </div>
      </div>
      <div class="card">
        <div class="card-header bg-black text-light">
          <h4 class="card-title">
            Create Administrator Account
          </h4>
        </div>
        <div class="card-body">
          <div class="alert hidden text-center d-flex align-items-center justify-content-center" id="new-admin-msg"></div>
          <form action="" id="new-admin-form" method="POST">
            <div class="form-group">
              <input type="text" name="firstName" id="first-name" class="form-control" placeholder="First Name"
                autocomplete="off">
              <span class="d-block error" id="firstNameError"></span>
            </div>

            <div class="form-group">
              <input type="text" name="lastName" id="last-name" class="form-control" placeholder="Last Name" autocomplete="off">
              <span class="d-block error" id="lastNameError"></span>
            </div>

            <div class="form-group">
              <input type="email" name="emailAddress" id="email-address" class="form-control"
                placeholder="Email Address" autocomplete="off">
              <span class="d-block error" id="emailAddressError"></span>
            </div>

            <div class="form-group">
              <select name="userRole" id="user-role" class="form-control" aria-readonly="true" readonly="true">
                <option value="superuser">Super User</option>
              </select>
            </div>

            <div class="form-group">
              <input type="password" name="password" id="password" class="form-control" placeholder="Password">
              <span class="d-block error" id="passwordError"></span>
            </div>

            <div class="form-group">
              <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="confirm Password">
              <span class="d-block error" id="confirmPasswordError"></span>
            </div>

            <div class="form-group text-center">
              <button type="submit" class="btn btn-success">
                create account
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>