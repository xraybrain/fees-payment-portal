  <div class="col-12 ph-item">
    <div class="ph-col-12">
      <div class="ph-row">
        <div class="ph-col-4 big"></div>
        <div class="ph-col-4 big empty"></div>
        <div class="ph-col-4 big"></div>
      </div>
      <div class="ph-row">
        <div class="ph-col-4 big"></div>
        <div class="ph-col-4 big empty"></div>
        <div class="ph-col-4 big"></div>
      </div>
      <div class="ph-row">
        <div class="ph-col-4 big"></div>
        <div class="ph-col-4 big empty"></div>
        <div class="ph-col-4 big"></div>
      </div>
      <div class="ph-row">
