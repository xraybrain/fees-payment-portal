<script type="mustache/template" id="fee-lists-template">
  \{{#feeLists}}
  <div class="col-11 col-sm-12 mx-auto">
    <div class="card mb-3 fee-list-card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="py-1">Fee Title</td>
            <td class="py-1">\{{Fee.title}}</td>
          </tr>
          <tr>
            <td class="py-1">Category</td>
            <td class="py-1">\{{LevelCategory.name}}</td>
          </tr>
          <tr>
            <td class="py-1">Level</td>
            <td class="py-1">\{{Level.name}} \{{^Level}}general\{{/Level}}</td>
          </tr>
          <tr>
            <td class="py-1">Amount <span class="font-weight-bold">(&#8358;)</span></td>
            <td class="py-1">\{{amount}}</td>
          </tr>
        </tbody>
      </table>

      <div class="text-center">
        \{{^Payment}}
        <form action="/student/makepayment/" method="POST">
          <input type="hidden" name="id" value="\{{id}}" />
          <button type="submit" class="btn btn-success">
            make payment
          </button>
        </form>
        \{{/Payment}}
        \{{#Payment}}
        <div>
          <form action="/student/receipt/\{{id}}" method="get">
            <button type="submit" class="btn btn-warning font-weight-bold text-uppercase">
              receipt
              <i class="fas fa-info-circle"></i>
            </button>
          </form>
        </div>
        \{{/Payment}}
      </div>
    </div>
  </div>
  </div>
  \{{/feeLists}}
</script>
<!-- End of Template-->